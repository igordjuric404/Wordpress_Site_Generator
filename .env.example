# Local Stack Configuration (Homebrew default)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_SOCKET=/tmp/mysql.sock

# MAMP Configuration (optional)
# MYSQL_PORT=8889
# MYSQL_PASSWORD=root
# MYSQL_SOCKET=/Applications/MAMP/tmp/mysql/mysql.sock
# WEB_ROOT=/Applications/MAMP/htdocs
# BASE_URL=http://localhost:8888

# XAMPP Configuration (optional)
# MYSQL_SOCKET=/Applications/XAMPP/xamppfiles/var/mysql/mysql.sock
# WEB_ROOT=/Applications/XAMPP/xamppfiles/htdocs
# PHP_PATH=/Applications/XAMPP/xamppfiles/bin/php

# WP-CLI Configuration
WPCLI_PATH=wp
# PHP_PATH is auto-detected - only set if you want to override
# PHP_PATH=php

# Web Server Configuration
WEB_ROOT=/opt/homebrew/var/www
BASE_URL=http://localhost:8080
# Intel Homebrew default:
# WEB_ROOT=/usr/local/var/www

# Default Output Directory (for backups/exports)
SITES_DIR=/Users/YOUR_USERNAME/Sites

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-xxxxx

# AI Cost Limits
AI_COST_HARD_LIMIT_USD=1.00

# Logging
LOG_LEVEL=info

# Server Port
PORT=3000
