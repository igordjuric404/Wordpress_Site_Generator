{
  "name": "wordpress-site-generator",
  "version": "1.0.0",
  "description": "Local web application for automated WordPress site generation with AI content",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "tsx watch server/index.ts",
    "client": "vite",
    "build": "vite build",
    "start": "npm run dev",
    "start:all": "node scripts/start-all.js",
    "start:xampp": "node scripts/start-xampp.js",
    "start:mysql": "node scripts/start-mysql-auto.js",
    "kill-ports": "node scripts/kill-ports.js",
    "typecheck": "tsc --noEmit",
    "sweep": "tsx scripts/template-sweep.ts",
    "sweep:spectra": "tsx scripts/template-sweep.ts --stack spectra",
    "sweep:classic": "tsx scripts/template-sweep.ts --stack classic"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "better-sqlite3": "^11.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "express": "^4.21.2",
    "fs-extra": "^11.2.0",
    "mysql2": "^3.11.5",
    "nanoid": "^5.0.9",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^7.1.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.7"
  }
}
